[global]
    title = Dunst
    class = Dunst
    follow = keyboard
    fullscreen = pushback

    width = 500
    height = 200
    origin = top-right
    offset = 10x50

    corner_radius = 15 # 18 (picom corner-radius) - 3(frame_width)
    text_icon_padding = 12
    horizontal_padding = 16
    padding = 12
    separator_color = frame
    separator_height = 2
    gap_size = 0

    frame_width = 3
    frame_color = "#28282880"
    transparency = 0

    font = Migu 1C 10
    line_height = 0
    ellipsize = end
    ignore_newline = no
    markup = full
    format = "<b>%s</b><span size="smaller">\n\n%b</span>"
    alignment = left
    vertical_alignment = top

    # Scale factor. It is auto-detected if value is 0.
    scale = 0

    notification_limit = 0
    indicate_hidden = yes

    progress_bar_height = 10
    progress_bar_frame_width = 0
    progress_bar_min_width = 150
    # 500 - 16*2 - 48 - 12 + 3*2
    # width - horizontal_padding*2 - icon - text_icon_padding + frame_width
    progress_bar_max_width = 414
    progress_bar_corner_radius = 0
    progress_bar_horizontal_alignment = right

    sort = yes

    # Don't remove messages, if the user is idle (no mouse or keyboard input)
    # for longer than idle_threshold seconds.
    # Set to 0 to disable.
    # A client can set the 'transient' hint to bypass this. See the rules
    # section for how to disable this if necessary
    idle_threshold = 60

    # Show age of message if message is older than show_age_threshold
    # seconds.
    # Set to -1 to disable.
    show_age_threshold = -1

    stack_duplicates = true
    hide_duplicate_count = true
    show_indicators = false

    enable_recursive_icon_lookup = true
    icon_theme = Papirus-Dark
    icon_position = left
    icon_corner_radius = 0
    min_icon_size = 48
    max_icon_size = 48

    sticky_history = yes
    history_length = 100

    # dmenu path.
    dmenu = /usr/bin/dmenu -p dunst:

    # Browser for opening urls in context menu.
    browser = /usr/bin/xdg-open

    ignore_dbusclose = false
    force_xwayland = false

    ### mouse
    mouse_left_click = close_current
    mouse_middle_click = do_action, close_current
    mouse_right_click = context

[urgency_low]
    background = "#1e1e1e44"
    foreground = "#e0e0e044"
    highlight = "#e0e0e0"
    timeout = 10

[urgency_normal]
    background = "#1e1e1ecc"
    foreground = "#e0e0e0"
    highlight = "#e0e0e0"
    timeout = 10

[urgency_critical]
    background = "#900000bb"
    foreground = "#e0e0e0"
    highlight = "#e0e0e0"
    timeout = 0

