#!/bin/bash

if [ ! -L "$0" ]; then
  echo dotfiles is not installed
  exit 1
fi
ROOT=$(cd $(dirname "$(readlink "$0")"); cd ../..; pwd)

cd ${ROOT}

ARGS=()
ARGS+=${@##${HOME}/.}

HELP="commands:"

HELP=$HELP"
\tlink
\t\tsetup dotfiles link"
link() {
    make link
}

HELP=$HELP"
\tcopy FILE...
\t\tcopies FILE to dotfiles repository"
copy() {
    first=1
    changed=0
    for i in $@; do
        if [ "$first" != "1" ]; then
            ORIG="${HOME}/.$i"
            if [ ! -e "$i" ] && [ -e "${ORIG}" ]; then
                echo move ${ORIG} to ${ROOT}/$i
                mv ${ORIG} ${ROOT}/$i
                changed=1
            fi
        fi
        first=0
    done
    if [ "$changed" = "1" ]; then
        echo update link
        make link
    fi
}

HELP=$HELP"
\thelp
\t\tshow this help"
help() {
    echo -e "$HELP"
    exit 1
}

if [ "$#" = 0 ]; then
    help
else
    if [ "$(type -t $1)" == "function" ]; then
        $1 $ARGS
    else
        git $ARGS
    fi

fi
